<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="@drawable/touch_bg">

    <EditText
        android:id="@+id/commen_write_commen"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/toc_item_icon_selector"
        android:drawablePadding="10dp"
        android:hint="请输入评论"
        android:padding="10dp"
        android:textColor="@color/light_black"
        android:textSize="16sp" />
    <Button
        android:id="@+id/commen_commen_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/commen_write_commen"
        android:text="发表评论"
        android:background="@color/light_blue"
        android:textSize="16sp"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/commen_write_commen"
        android:background="@color/common_divider_narrow" />


</RelativeLayout>
